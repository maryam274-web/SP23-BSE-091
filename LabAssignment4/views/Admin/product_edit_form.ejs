<h4>Edit Product</h4>

<form action="" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="titleInput">Title</label>
        <input name="title" type="text" class="form-control" id="titleInput" aria-describedby="emailHelp" placeholder="Enter Title" value="<%= products.title %>" />
        <small id="emailHelp" class="form-text text-muted">Product Title</small>
      </div>
      <div class="form-group">
        <label for="descriptionInput">Description</label>
        <textarea name="description" type="text" class="form-control" id="descriptionInput" aria-describedby="emailHelp" placeholder="Enter Description"><%= products.description %> </textarea>
        <small id="emailHelp" class="form-text text-muted">Product Details</small>
      </div>
      <div class="form-group">
        <label for="priceInput">Price</label>
        <input name="price" type="text" class="form-control" id="priceInput" aria-describedby="emailHelp" placeholder="Enter Price" value="<%= products.price %>">
        <small id="emailHelp" class="form-text text-muted">Product Price in PKR</small>
      </div>
      <div class="form-group">
        <label for="productImage">Product Image</label>
        <input type="file" class="form-control mt-2 mb-3" id="productImage" name="productImage">
        <p>Current Image: <img src="<%= products.image %>" alt="Product Image" width="100"></p> <!-- Display current image -->
      </div>
      <div class="form-group">
        <label for="category">Category</label>
        <select name="categoryId" class="form-control">
          <% categories.forEach(category => { %>
            <option value="<%= category._id %>" 
              <%= products.category && products.category._id.toString() === category._id.toString() ? 'selected' : '' %>>
              <%= category.title %>
            </option>
          <% }); %>
        </select>
      </div>
      <div class="form-group">
        <button class="btn btn-info">Edit New Product</button>
      </div>

</form>