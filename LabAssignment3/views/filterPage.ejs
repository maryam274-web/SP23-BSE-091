<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Filtered Products</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Products</h1>
  <!-- Products List -->
  <div>
    <% if (products.length > 0) { %>
      <ul>
        <% products.forEach(product => { %>
          <li>
            <h3><%= product.name %></h3>
            <p>Price: $<%= product.price %></p>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No products found.</p>
    <% } %>
  </div>

  <ul class="pagination justify-content-center p-3">
    <!-- Previous Button -->
    <li class="page-item <%= page == 1 ? 'disabled' : '' %>">
        <a class="page-link text-secondary" href="/furniture/<%= page - 1 %>">Previous</a>
    </li>

    <!-- Loop to generate page numbers -->
    <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= page == i ? 'active' : '' %>">
            <a 
                class="page-link <%= page == i ? 'bg-secondary text-white' : 'text-secondary' %>" 
                href="/clothes/<%= i %>">
                <%= i %>
            </a>
        </li>
    <% } %>

    <!-- Next Button -->
    <li class="page-item <%= page == totalPages ? 'disabled' : '' %>">
        <a class="page-link text-secondary" href="/furniture/<%= page + 1 %>">Next</a>
    </li>
</ul>

<div class="pagination mb-3 justify-content-center">
    Page <%= page %> of <%= totalPages %>
</div>
  
</body>
</html>
